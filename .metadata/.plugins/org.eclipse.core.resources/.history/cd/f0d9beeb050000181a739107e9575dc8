package hellokk.shuati;

public class ShaoBing {
	public static void main(String[] args) {
		int a = getMini(6, 3);
		System.out.println(a);
	}
	public static int getMini(int m,int k){
		if(m<k){
			return 2;
		}else{
			 if(m%k==0){
				 return 2*(m/k);
			 }else {
				 return 2*(m/k)+m%k;
			 }
		}
		
	}
}
